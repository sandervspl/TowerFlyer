*
  margin 0
  padding 0
  box-sizing border-box
  color #FFFFFF


html, body
  width 100%
  height 100%
  overflow hidden
  font-family Arial, sans-serif
  background-color #070c15


body
  display flex
  align-items center


#pre-loader
  position fixed
  display flex
  justify-content center
  align-content center
  flex-direction column
  width 100%
  height 100%
  background #000


#pre-loader h1,
#pre-loader p
  color #eee
  text-align center


#pre-loader .loader
  margin 1rem auto
  width 300px
  height 30px
  background #eee


#pre-loader .loader .inner
  height 100%
  width 0
  background #35bb5d
  transition width .2s ease


#highscore-container
  display none
  position fixed
  top 20px
  z-index 2
  padding 5px 15px
  border-radius 50px
  background rgba(0, 0, 0, .65)
  color #fff

  #highscore
    color #257AE3


#view__gameover
  display none
  justify-content center
  align-items center
  flex-direction column
  position fixed
  width 100%
  height 100%
  opacity 0
  transition opacity .1s ease-in
  color #FFFFFF

  &.show
    opacity 1
    background-color rgba(10, 49, 97, 0.6)

  .inner
    margin-top -30%
    display flex
    align-content center
    align-items center
    flex-direction column

  h1
    font-size 2em
    text-transform uppercase

  #endscore
    color #257AE3
    font-size 5rem
    font-weight 900

  #newhighscore
    display none